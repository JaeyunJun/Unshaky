# Updated to support modern macOS versions
# Minimum version set to 10.15 due to Input Monitoring requirement (issue #166)
platform :osx, '10.15'

target 'Unshaky' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Unshaky
  pod 'Sparkle'

end

target 'UnshakyTests' do
  use_frameworks!

  pod 'Quick'
  pod 'Nimble'
end
